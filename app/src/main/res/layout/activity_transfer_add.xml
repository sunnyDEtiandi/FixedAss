<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/titleLayout" layout="@layout/layout_title"/>

    <TableLayout
        android:id="@+id/transferCon"
        android:layout_below="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottomColor"
        android:padding="8sp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginLeft="15sp"
                android:gravity="right"
                android:text="*"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="16sp"
                android:text="新使用人" />
            <EditText
                android:id="@+id/newUsePeople"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10sp"
                android:padding="5dp"
                android:focusable="false"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginLeft="15sp"
                android:gravity="right"
                android:text="*"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="16sp"
                android:text="转移时间"/>
            <EditText
                android:id="@+id/changeDate"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10sp"
                android:padding="5dp"
                android:focusable="false"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginLeft="15sp"
                android:gravity="right"
                android:text="*"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="新保管员"/>
            <!--<EditText
                android:id="@+id/newCareMan"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10sp"
                android:padding="5dp"/>-->
            <Spinner
                android:id="@+id/newCareMan"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:padding="5dp"
                android:layout_marginLeft="10sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginLeft="15sp"
                android:gravity="right"
                android:text="*"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store"
                android:textSize="16sp" />
           <!-- <EditText
                android:id="@+id/newPlace"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10sp"
                android:padding="5dp"/>-->
            <Spinner
                android:id="@+id/newPlace"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:padding="5dp"
                android:layout_marginLeft="10sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_span="2"
                android:gravity="right"
                android:textSize="16sp"
                android:text="@string/operNote"/>
            <EditText
                android:id="@+id/operNote"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10sp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"/>
        </TableRow>
    </TableLayout>
    <!--android:layout_marginBottom="10dp"-->
    <View
        android:id="@+id/line"
        android:layout_below="@+id/transferCon"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/textColor"/>

    <ListView
        android:id="@+id/transferAsset"
        android:layout_below="@+id/line"
        android:layout_above="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <include
        android:id="@+id/menu"
        layout="@layout/layout_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
