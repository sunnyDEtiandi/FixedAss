    <ImageView
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main" />


    <LinearLayout
        android:id="@+id/setUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setPassWord"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/denglu" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            android:textSize="18sp"
            android:hint="@string/user_name"
            android:text="xiaoxiao"
            android:singleLine="true"
            android:imeOptions="actionNext"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mima" />

        <EditText
            android:id="@+id/passWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:text="123"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:hint="@string/pwd_name"/>

    </LinearLayout>

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:layout_below="@+id/setPassWord"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/loginBtn"
        android:layout_below="@+id/point"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/dengl"/>

